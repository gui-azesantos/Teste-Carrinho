@model IEnumerable<GerenciamentoEvento.Models.Evento>
@{
    ViewData["Title"] = "Shows";
}
  
<style>
  iframe{
    float: right;
  }
</style>

 @foreach(var eventos in Model)
    {   @if(eventos.Status == true){
      
<div class="card text-white " style="border-color:#6E3667; border-width: 20px;  font-size:25px">
  <img class="card-img" src=@eventos.Imagem alt="Imagem do card">
  <div class="card-img-overlay">
    <h2 class="card-title" id="titulo" >@eventos.Nome</h2>
    </div>
     <div class="card-body" style="color: black; position:relative" >
      <iframe src=@eventos.CasaDeShow.LinkEndereco width="400" height="300" frameborder="0" style="border:0; float: right" allowfullscreen=""></iframe>
