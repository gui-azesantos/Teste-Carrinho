     <p class="card-text"><strong>Local: </strong>@eventos.CasaDeShow.Nome</p>
     <p class="card-text"><strong>Quatidade de Ingressos: </strong>@eventos.Capacidade</p>
     <p class="card-text"><strong>Data: </strong>@eventos.Data.ToString("dd/MM/yyyy HH:mm")</p>
     <p class="card-text"><strong>Preço: R</strong>@eventos.Preco.ToString("C")
      @if(@eventos.Estilo == "0")
