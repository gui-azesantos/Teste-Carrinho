@model GerenciamentoEvento.DTO.LocalDTO;
@{
    ViewData["Title"] = "Editar";
}
<h2>Edite o Local!</h2>

<form class="form-horizontal" asp-controler="Local" asp-action="Atualizar" method="POST">

    <input type="hidden" asp-for="Id">
    
    <div>
    <label asp-for="Nome" class="control-label"></label>
    <input type="text" class="form-control" asp-for="Nome" >
    <span asp-validation-for="Nome"></span>
    </div>

    <div>    
    <label asp-for="Endereco" class="control-label"></label>
    <input type="text" class="form-control" asp-for="Endereco" >  
    <span asp-validation-for="Endereco"></span>
    </div>
    
    <div>
    <label asp-for="LinkEndereco" class="control-label">Link Endereço [Google Maps] | Para ver o tutorial <a href="https://support.google.com/maps/answer/144361?co=GENIE.Platform%3DDesktop&hl=pt-BR">Clique aqui!</a> </label>
    <input type="text" class="form-control" asp-for="LinkEndereco">
    <span asp-validation-for="LinkEndereco"></span>
    <p><strong>Obs: </strong>Colocar apenas conteúdo detro de "src".</p>
    </div>

    <div class="form-group"></div>
      <button class= "btn btn-success" type="submit">Atualizar</button>
    </div>

</form>